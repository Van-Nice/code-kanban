{
  "name": "codekanban",
  "displayName": "Code Kanban",
  "description": "Kanban board and to do list fully integrated into vscode",
  "version": "0.0.1",
  "publisher": "wilsonvannice",
  "repository": {
    "type": "git",
    "url": "https://github.com/van-nice/code-kanban.git"
  },
  "icon": "icons/codekanban.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeKanban.openBoard",
    "onCommand:codeKanban.addCard",
    "onCommand:codeKanban.openBoardInEditor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeKanban",
          "title": "Code Kanban",
          "icon": "icons/codekanban.svg"
        }
      ]
    },
    "views": {
      "codeKanban": [
        {
          "id": "codeKanbanWebview",
          "name": "Code Kanban",
          "type": "webview",
          "icon": "icons/codekanban.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "codeKanban.openBoard",
        "title": "Open Board"
      }
    ],
    "configuration": {
      "title": "Code Kanban",
      "properties": {
        "codeKanban.api.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable the Code Kanban REST API."
        },
        "codeKanban.api.port": {
          "type": "number",
          "default": 3000,
          "description": "Port for the Code Kanban REST API."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "compile-all": "npm run build --prefix webview && npm run compile",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production",
    "compile-tests": "webpack --config ./webpack.test.config.js",
    "watch-tests": "webpack --watch --config ./webpack.test.config.js",
    "pretest": "npm run compile-tests",
    "lint": "eslint src",
    "test": "vscode-test",
    "test-watch": "npm run compile-tests && vscode-test",
    "analyze": "ANALYZE=true webpack --mode production",
    "analyze:webview": "npm run analyze --prefix webview",
    "analyze-all": "npm run analyze:webview && npm run analyze"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "uuid": "^11.1.0"
  }
}
