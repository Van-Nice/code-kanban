{
  "name": "boogie",
  "displayName": "boogie",
  "description": "Kanban board and to do list fully integrated into vscode",
  "version": "0.0.1",
  "publisher": "wilsonvannice",
  "repository": {
    "type": "git",
    "url": "https://github.com/van-nice/boogie.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:boogieWebview",
    "onCommand:boogie.openKanbanBoard"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "boogie",
          "title": "Boogie Boards",
          "icon": "icons/boogieboard.svg"
        }
      ]
    },
    "views": {
      "boogie": [
        {
          "id": "boogieWebview",
          "name": "Boogie Boards",
          "type": "webview",
          "icon": "icons/boogieboard.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "boogie.openKanbanBoard",
        "title": "Open Kanban Board"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "compile-all": "npm run build --prefix webview && npm run compile",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production",
    "compile-tests": "tsc -p ./src/test/tsconfig.json",
    "watch-tests": "tsc -p ./src/test/tsconfig.json -w",
    "pretest": "npm run compile-tests",
    "lint": "eslint src",
    "test": "vscode-test",
    "test-watch": "npm run compile-tests && vscode-test",
    "analyze": "ANALYZE=true webpack --mode production",
    "analyze:webview": "npm run analyze --prefix webview",
    "analyze-all": "npm run analyze:webview && npm run analyze"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
