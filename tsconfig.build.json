{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["webview", "node_modules", "src/test", "**/*.test.ts"]
}
